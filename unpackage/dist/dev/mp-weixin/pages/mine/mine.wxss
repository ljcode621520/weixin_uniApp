.page {
  padding: 35rpx;
}
.user-info {
  margin-top: 50rpx;
  padding-bottom: 20rpx;
}
.border-outer {
  height: 320rpx;
  width: 320rpx;
  background-color: #be3e 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-border-radius: 160rpx;
          border-radius: 160rpx;
  margin-left: auto;
  margin-right: auto;
}
.border-inner {
  width: 280rpx;
  height: 280rpx;
  background-color: #5b8b 4;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-border-radius: 140rpx;
          border-radius: 140rpx;
}
.photo {
  width: 200rpx;
  height: 200rpx;
  -webkit-border-radius: 120rpx;
          border-radius: 120rpx;
  display: block;
  border: 1px solid #ec7872;
}
.summary {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  background-color: #f5f5f5;
  color: #333;
  padding: 15rpx 0;
}
.summary view {
  text-align: center;
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
  -webkit-flex-shrink: 1;
          flex-shrink: 1;
}
.summary view:nth-child(2) {
  border-left: 1rpx solid #e0e0e0;
  border-right: 1rpx solid #e0e0e0;
}
.summary view .title {
  display: block;
  color: #999;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.summary view .value {
  display: block;
  color: #333;
  font-size: 32rpx;
}
.list-title {
  margin-top: 35rpx;
  margin-bottom: 35rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #3474FF;
  border-left: solid 15rpx #3474FF;
  padding-left: 20rpx;
}

